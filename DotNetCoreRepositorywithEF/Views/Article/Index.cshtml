@model IEnumerable<Article>
@{
    ViewBag.Title = "View Data";
}
<h1>View Articles</h1>
<div class="row text">
    <div class="col-md-8 offset-2">
        <table class="table table-striped border-1">
            <thead>
                <th>Title</th>
                <th>Content</th>
                <th></th
                 <th></th
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ArticleTitle</td>
                        <td>@item.ArticleContent</td>
                        <td>
                            <a asp-controller="article" asp-action="EditArticle" asp-route-id="@item.ArticleId"
                             class="btn btn-outline-success">Edit</a>
                        </td>
                        <td><a asp-controller="article" asp-action="DeleteArticle" asp-route-id="@item.ArticleId"
                             class="btn btn-outline-danger">Delete</a></td>
                    </tr>                    
                }
            </tbody>
        </table>
    </div>

</div>